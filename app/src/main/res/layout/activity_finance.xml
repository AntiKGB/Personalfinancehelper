<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Finance.application.FinanceActivity"
    android:background="#FFF5EE"
    android:orientation="vertical">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp">

        <Button
            android:id="@+id/addNewFinList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Add new operation list" />

        <Button
            android:id="@+id/delFinList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete operation list"
            />


    </LinearLayout>



<include layout="@layout/finance_list"/>
</RelativeLayout>